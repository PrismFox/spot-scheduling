{
  "builders": [{
    "vm_name": "sockshop_base",
    "type": "qemu",
    "disk_image": true,
    "iso_url": "https://cloud-images.ubuntu.com/xenial/current/xenial-server-cloudimg-amd64-disk1.img",
    "iso_checksum_url": "https://cloud-images.ubuntu.com/xenial/current/SHA256SUMS",
    "iso_checksum_type": "sha256",
    "format": "qcow2",
    "disk_interface": "virtio",
    "accelerator": "kvm",
    "shutdown_command": "sudo shutdown -h now",
    "ssh_username": "ubuntu",
    "ssh_password": "passw0rd",
    "ssh_port": 22,
    "qemuargs": [
      ["-vga", "none"],
      ["-display", "none"],
      ["-m", "1024M"],
      ["-cdrom", "my-seed.img"]
    ]
  }],

  "provisioners": [{
    "type": "shell",
    "script": "packer-script/install_docker.sh",
    "expect_disconnect": true
  }, {
    "type": "shell",
    "script": "packer-script/sockshop_pull.sh",
    "pause_before": "10s"
  }, {
    "type": "shell",
    "inline": ["sudo rm -rf /var/lib/cloud"]
  }]
}