<domain type="kvm">
    <name>{{.Name}}</name>
    <memory unit="MiB">{{.Memory}}</memory>
    <vcpu>{{.Vcpu}}</vcpu>
    <os>
        <type arch="x86_64">hvm</type>
        <boot dev="hd"/>
    </os>
    <features>
        <acpi/>
    </features>
    <devices>
        <disk type="file">
            <source file="{{.SystemDiskFilePath}}"/>
            <driver name="qemu" type="qcow2"/>
            <target dev="hda" bus="virtio"/>
        </disk>
        <disk type="file">
            <source file="{{.UserDataDiskFilePath}}"/>
            <driver name="qemu" type="raw"/>
            <target dev="hdb" bus="virtio"/>
        </disk>
        <interface type='bridge'>
            <source bridge='br0'/>
            <model type='virtio'/>
        </interface>
        <console type="pty">
            <target type="serial" port="1"/>
        </console>
    </devices>
</domain>
